<h1><%= @actor.full_name %></h1>

<% if @actor.movie %>
  <h3>Movie</h3>
  <p><%= @actor.movie %>
<% end %>

<% if @actor.year %>
  (<%= @actor.year %>)</p>
<% end %>

<% if @actor.book_title %>
  <h3>Book Title</h3>
  <p><%= @actor.book_title %></p>
<% end %>

<% if @actor.description %>
  <h3>Description</h3>
  <p><%= @actor.description %></p>
<% end %>
